<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        cacheDirectory="var/psalm-cache"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="var"/>
            <directory name="public"/>
<!--            <directory name="tests"/>-->
            <file name="src/Media/.phpstorm.meta.php"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
        <pluginClass class="App\Infrastructure\Psalm\Plugin"/>
    </plugins>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
<!--                vendor-->
                <referencedProperty name="League\Flysystem\ConfigAwareTrait::$config"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <MixedMethodCall>
            <errorLevel type="info">
                <file name="src/Infrastructure/Denormalizer.php"/>
                <file name="src/Infrastructure/Controller/CommandValueResolver.php"/>
            </errorLevel>
        </MixedMethodCall>
        <MixedAssignment>
            <errorLevel type="info">
                <file name="src/Infrastructure/Controller/CommandValueResolver.php"/>
            </errorLevel>
        </MixedAssignment>
        <ImpureMethodCall errorLevel="info"/>
        <RedundantCastGivenDocblockType errorLevel="info"/>
    </issueHandlers>
</psalm>
