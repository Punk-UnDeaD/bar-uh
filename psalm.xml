<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        cacheDirectory="var/psalm-cache"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="tests"/>
            <file name="src/Model/Media/Entity/Repository/.phpstorm.meta.php"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
        <pluginClass class="App\Psalm\Plugin"/>
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
<!--                vendor-->
                <referencedProperty name="League\Flysystem\ConfigAwareTrait::$config"/>
                <referencedProperty name="Doctrine\ORM\EntityRepository::$_entityName"/>
                <referencedProperty name="Doctrine\ORM\EntityRepository::$_em"/>
                <referencedProperty name="Doctrine\ORM\EntityRepository::$_class"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <MixedMethodCall>
            <errorLevel type="info">
                <file name="src/ReadModel/Denormalizer.php"/>
                <file name="src/Controller/CommandValueResolver.php"/>
            </errorLevel>
        </MixedMethodCall>
        <MixedAssignment>
            <errorLevel type="info">
                <file name="src/Controller/CommandValueResolver.php"/>
            </errorLevel>
        </MixedAssignment>
        <ImpureMethodCall errorLevel="info"/>
<!--        <UnresolvableInclude>-->
<!--            <errorLevel type="suppress">-->
<!--                <file name="src/Kernel.php" />-->
<!--            </errorLevel>-->
<!--        </UnresolvableInclude>-->
    </issueHandlers>
</psalm>
